# ===========================================
# Environment Variables Example
# Copy this file to .env and fill in your values
# ===========================================

# ----- Database -----
DATABASE_URL=postgresql://user:password@localhost:5432/raypx
VECTOR_URL=                          # Optional: fallback to DATABASE_URL if not set
DATABASE_PREFIX=                     # Optional: table prefix

# ----- Authentication -----
AUTH_SECRET=your-secret-key-min-32-chars
AUTH_DOMAIN=                         # Optional: custom auth domain
VITE_AUTH_URL=http://localhost:3000  # Optional: auth callback URL

# GitHub OAuth
AUTH_GITHUB_ID=your-github-client-id
AUTH_GITHUB_SECRET=your-github-client-secret

# Google OAuth
AUTH_GOOGLE_ID=your-google-client-id
AUTH_GOOGLE_SECRET=your-google-client-secret

# ----- Email -----
RESEND_FROM=hello@example.com
AUTH_RESEND_KEY=re_your-resend-api-key

# SMTP (Optional, alternative to Resend)
MAIL_HOST=smtp.example.com
MAIL_PORT=465
MAIL_SECURE=true
MAIL_USER=your-email@example.com
MAIL_PASSWORD=your-email-password

# ----- Redis -----
REDIS_URL=redis://localhost:6379

# ----- Storage (Cloudflare R2) -----
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=your-r2-access-key
R2_SECRET_ACCESS_KEY=your-r2-secret-key
R2_BUCKET_NAME=your-bucket-name
VITE_R2_PUBLIC_URL=https://your-r2-public-url.com

# ----- Analytics -----
# PostHog (recommended)
VITE_PUBLIC_POSTHOG_KEY=phc_your-posthog-key
VITE_PUBLIC_POSTHOG_HOST=https://app.posthog.com
VITE_PUBLIC_POSTHOG_INGESTION_URL=   # Optional

# Google Analytics (optional)
VITE_PUBLIC_ENABLE_GA=false
VITE_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Analytics controls
VITE_PUBLIC_ANALYTICS_DISABLED=false
VITE_PUBLIC_ANALYTICS_DEBUG=false

# ----- Observability (Sentry) -----
VITE_SENTRY_DSN=https://xxx@sentry.io/xxx
VITE_SENTRY_ENABLE_DEV=false

# ----- General -----
NODE_ENV=development

# ----- Billing (Stripe) -----
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
