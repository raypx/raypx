{
  "extends": "@raypx/config/base.json",
  "include": ["src/**/*.ts", "config/**/*.ts", "drizzle.config.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "composite": true,
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": false
  }
}
