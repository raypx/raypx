{
  "name": "raypx",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "@tailwindcss/vite": "^4.1.18",
      "@tanstack/react-router": "^1.151.6",
      "@tanstack/react-start": "^1.153.0",
      "@testing-library/react": "^16.2.0",
      "@types/bun": "^1.1.13",
      "@types/react": "^19.2.8",
      "@types/react-dom": "^19.2.3",
      "@vitejs/plugin-react": "^5.1.2",
      "@vitest/coverage-v8": "^4.0.17",
      "@vitest/ui": "^4.0.17",
      "better-auth": "^1.4.15",
      "jsdom": "^27.4.0",
      "nitro": "3.0.1-alpha.1",
      "react": "^19.2.3",
      "react-dom": "^19.2.3",
      "shadcn": "^3.6.3",
      "tailwind-merge": "^3.4.0",
      "tailwindcss": "^4.1.18",
      "tw-animate-css": "^1.4.0",
      "typescript": "^5.9.3",
      "vite": "^8.0.0-beta.8",
      "vite-tsconfig-paths": "^6.0.4",
      "vitest": "^4.0.17",
      "zod": "^4.3.5"
    }
  },
  "scripts": {
    "build": "turbo build",
    "build:docs": "turbo -F docs build",
    "build:web": "turbo -F web build",
    "check": "turbo check",
    "check-types": "turbo typecheck",
    "clean": "turbo clean",
    "clean:all": "bun run scripts/clean.ts",
    "db": "bun -F @raypx/database db",
    "dev": "turbo dev",
    "dev:docs": "bun --bun turbo -F docs dev",
    "dev:server": "bun --bun turbo -F server dev",
    "dev:web": "bun --bun turbo -F web dev",
    "format": "biome check --write .",
    "knip": "knip",
    "knip:fix": "knip --fix",
    "lint": "biome check .",
    "prepare": "lefthook install",
    "reinstall": "rm -rf node_modules apps/*/node_modules packages/*/node_modules && bun install",
    "shadcn": "bun --bun turbo -F @raypx/ui shadcn",
    "start": "turbo start",
    "test": "turbo test",
    "test:coverage": "turbo test:coverage",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "typecheck": "turbo typecheck",
    "update:deps": "bun update --interactive --recursive --latest"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@raypx/config": "workspace:*",
    "@types/bun": "^1.3.6",
    "consola": "^3.4.2",
    "knip": "^5.82.0",
    "lefthook": "^2.0.14",
    "turbo": "^2.7.5"
  },
  "packageManager": "bun@1.3.6"
}
