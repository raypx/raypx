{
  "name": "raypx",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5.9.3",
      "@types/bun": "^1.3.5",
      "@orpc/server": "^1.12.2",
      "@orpc/openapi": "^1.12.2",
      "@orpc/zod": "^1.12.2",
      "nitro": "3.0.1-alpha.1",
      "better-auth": "^1.4.9",
      "@orpc/client": "^1.12.2",
      "vite": "8.0.0-beta.7",
      "vitest": "^4.0.16",
      "@vitest/ui": "^4.0.16",
      "@testing-library/react": "^16.2.0",
      "@testing-library/dom": "^10.4.1",
      "jsdom": "^27.4.0"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "start": "turbo start",
    "format": "biome check --write .",
    "check": "turbo check",
    "typecheck": "turbo typecheck --affected --cache-dir=.turbo",
    "check-types": "turbo check-types",
    "test": "turbo test",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "clean": "turbo clean",
    "dev:docs": "turbo -F docs dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @raypx/db db:push",
    "db:studio": "turbo -F @raypx/db db:studio",
    "db:generate": "turbo -F @raypx/db db:generate",
    "db:migrate": "turbo -F @raypx/db db:migrate",
    "update:deps": "bun update --interactive --recursive --latest"
  },
  "dependencies": {
    "@raypx/env": "workspace:*",
    "dotenv": "^17.2.3",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@raypx/config": "workspace:*",
    "@types/bun": "^1.3.5",
    "lefthook": "^2.0.13",
    "turbo": "^2.7.3",
    "typescript": "^5.9.3"
  },
  "packageManager": "bun@1.3.5"
}
