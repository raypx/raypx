{
  "name": "raypx",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "@orpc/client": "^1.12.2",
      "@orpc/server": "^1.12.2",
      "@tabler/icons-react": "^3.36.1",
      "@tailwindcss/vite": "^4.1.18",
      "@tanstack/react-router": "^1.147.3",
      "@tanstack/react-start": "^1.149.1",
      "@testing-library/dom": "^10.4.1",
      "@testing-library/react": "^16.2.0",
      "@types/react": "^19.2.8",
      "@types/react-dom": "^19.2.3",
      "@vitejs/plugin-react": "^5.1.2",
      "@vitest/ui": "^4.0.17",
      "better-auth": "^1.4.11",
      "jsdom": "^27.4.0",
      "nitro": "3.0.1-alpha.1",
      "react": "^19.2.3",
      "react-dom": "^19.2.3",
      "shadcn": "^3.6.3",
      "sonner": "^2.0.7",
      "tailwind-merge": "^3.4.0",
      "tailwindcss": "^4.1.18",
      "tw-animate-css": "^1.4.0",
      "typescript": "^5.9.3",
      "vite": "^8.0.0-beta.7",
      "vite-tsconfig-paths": "^6.0.4",
      "vitest": "^4.0.17",
      "zod": "^4.3.5"
    }
  },
  "scripts": {
    "build": "turbo build",
    "build:docs": "turbo -F docs build",
    "build:web": "turbo -F web build",
    "check": "turbo check",
    "check-types": "turbo check-types",
    "clean": "turbo clean",
    "db": "bun --bun turbo -F @raypx/database db -- ",
    "db:generate": "turbo -F @raypx/database db:generate",
    "db:migrate": "turbo -F @raypx/database db:migrate",
    "db:push": "turbo -F @raypx/database db:push",
    "db:studio": "turbo -F @raypx/database db:studio",
    "dev": "turbo dev",
    "dev:docs": "turbo -F docs dev",
    "dev:server": "turbo -F server dev",
    "dev:web": "turbo -F web dev",
    "format": "biome check --write .",
    "shadcn": "turbo -F @raypx/ui shadcn",
    "start": "turbo start",
    "test": "turbo test",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "update:deps": "bun update --interactive --recursive --latest"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@raypx/config": "workspace:*",
    "@types/bun": "^1.3.5",
    "lefthook": "^2.0.14",
    "turbo": "^2.7.4",
    "typescript": "^5.9.3"
  },
  "packageManager": "bun@1.3.5"
}
