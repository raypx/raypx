{
  "name": "raypx",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo build",
    "build:docs": "turbo -F docs build",
    "build:web": "turbo -F web build",
    "check": "turbo check",
    "check-types": "turbo typecheck",
    "clean": "turbo clean",
    "clean:all": "pnpm tsx scripts/clean.ts",
    "db": "pnpm --filter @raypx/database db",
    "dev": "turbo dev",
    "dev:api": "pnpm turbo -F api dev",
    "dev:docs": "pnpm turbo -F docs dev",
    "dev:server": "pnpm turbo -F server dev",
    "dev:app": "pnpm turbo -F app dev",
    "dev:web": "pnpm turbo -F web dev",
    "format": "biome check --write .",
    "knip": "knip",
    "knip:fix": "knip --fix",
    "lint": "biome check .",
    "prepare": "lefthook install",
    "reinstall": "rm -rf node_modules apps/*/node_modules packages/*/node_modules && pnpm install",
    "shadcn": "pnpm --filter web shadcn",
    "start": "turbo start",
    "test": "turbo test",
    "start:web": "pnpm turbo -F web start",
    "test:coverage": "turbo test:coverage",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "typecheck": "turbo typecheck",
    "update:deps": "pnpm update --interactive --recursive --latest"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@dotenvx/dotenvx": "^1.52.0",
    "@raypx/config": "workspace:*",
    "consola": "^3.4.2",
    "knip": "^5.82.1",
    "lefthook": "^2.0.15",
    "tsx": "^4.21.0",
    "turbo": "^2.7.6",
    "vitest": "^4.0.18"
  },
  "packageManager": "pnpm@10.28.2",
  "overrides": {
    "esbuild": "^0.27.2",
    "rolldown": "^1.0.0-rc.1"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "@tailwindcss/vite": "^4.1.18",
      "@tanstack/react-router": "^1.157.14",
      "@tanstack/react-start": "^1.157.14",
      "@types/react": "^19.2.9",
      "@types/react-dom": "^19.2.3",
      "@vitejs/plugin-react": "^5.1.2",
      "@vitest/coverage-v8": "^4.0.18",
      "@vitest/ui": "^4.0.18",
      "better-auth": "^1.4.17",
      "jsdom": "^27.4.0",
      "nitro": "3.0.1-alpha.2",
      "react": "^19.2.3",
      "react-dom": "^19.2.3",
      "shadcn": "^3.7.0",
      "tailwind-merge": "^3.4.0",
      "tailwindcss": "^4.1.18",
      "tw-animate-css": "^1.4.0",
      "typescript": "^5.9.3",
      "vite": "8.0.0-beta.10",
      "vite-tsconfig-paths": "^6.0.5",
      "vitest": "^4.0.18",
      "zod": "^4.3.6"
    }
  }
}
