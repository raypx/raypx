{
  "name": "raypx",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "turbo build",
    "build:docs": "turbo -F docs build",
    "build:web": "turbo -F web build",
    "check": "turbo check",
    "check-types": "turbo typecheck",
    "clean": "turbo clean",
    "clean:all": "pnpm tsx scripts/clean.ts",
    "db": "pnpm --filter @raypx/database db",
    "dev": "turbo dev",
    "dev:api": "pnpm turbo -F api dev",
    "dev:docs": "pnpm turbo -F docs dev",
    "dev:server": "pnpm turbo -F server dev",
    "dev:app": "pnpm turbo -F app dev",
    "dev:web": "pnpm turbo -F web dev",
    "format": "biome check --write .",
    "knip": "knip",
    "knip:fix": "knip --fix",
    "lint": "biome check .",
    "prepare": "lefthook install",
    "reinstall": "rm -rf node_modules apps/*/node_modules packages/*/node_modules && pnpm install",
    "shadcn": "pnpm --filter web shadcn",
    "shadcn:web": "pnpm --filter web shadcn",
    "shadcn:docs": "pnpm --filter docs shadcn",
    "shadcn:ui": "pnpm --filter @raypx/ui shadcn",
    "start": "turbo start",
    "start:docs": "turbo -F docs start",
    "test": "turbo test",
    "start:web": "pnpm turbo -F web start",
    "test:coverage": "turbo test:coverage",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "typecheck": "turbo typecheck",
    "update:deps": "pnpm update --interactive --recursive --latest"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@dotenvx/dotenvx": "^1.52.0",
    "@raypx/config": "workspace:*",
    "knip": "^5.82.1",
    "lefthook": "^2.0.16",
    "tsx": "^4.21.0",
    "turbo": "^2.8.1",
    "vitest": "^4.0.18"
  },
  "packageManager": "pnpm@10.28.2",
  "overrides": {
    "esbuild": "^0.27.2",
    "rolldown": "^1.0.0-rc.2"
  }
}
