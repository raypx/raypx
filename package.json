{
  "name": "raypx",
  "version": "0.0.0",
  "private": true,
  "description": "A modern web application built with TanStack Start and TypeScript",
  "homepage": "https://raypx.com",
  "bugs": {
    "url": "https://github.com/raypx/raypx/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/raypx/raypx.git"
  },
  "license": "Apache-2.0",
  "author": {
    "name": "Raypx Team",
    "email": "support@raypx.com"
  },
  "scripts": {
    "build": "turbo build",
    "build:pkg": "turbo build --filter=@raypx/*",
    "build:docs": "turbo build --filter=docs",
    "changeset": "changeset",
    "check": "biome check",
    "clean": "raypx-scripts clean",
    "coverage": "vitest --coverage",
    "db": "raypx-scripts db",
    "dev:docs": "turbo dev --filter=docs",
    "dev:email": "turbo dev --filter=email",
    "dev:web": "rr turbo dev --filter=web",
    "docs:build": "turbo build --filter=docs",
    "format": "raypx-scripts format",
    "preinstall": "npx only-allow pnpm",
    "prepare": "test -n \"$CI\" && echo 'Skipping lefthook' || lefthook install",
    "knip": "knip",
    "knip:files": "knip --files",
    "knip:production": "knip --production",
    "setup": "raypx-scripts setup",
    "shadcn": "pnpm --filter web run shadcn && pnpm -w format",
    "start": "turbo start",
    "start:web": "turbo start --filter=web",
    "test": "turbo test",
    "turbo": "turbo",
    "typecheck": "turbo typecheck --affected --cache-dir=.turbo",
    "update:deps": "pnpm update --latest --interactive --recursive"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@changesets/cli": "^2.29.8",
    "@dotenvx/dotenvx": "^1.52.0",
    "@playwright/test": "^1.58.2",
    "@raypx/scripts": "workspace:*",
    "@types/node": "catalog:",
    "@vitest/browser-playwright": "^4.0.18",
    "@vitest/coverage-v8": "^4.0.18",
    "jsdom": "^28.0.0",
    "knip": "^5.83.1",
    "lefthook": "^2.1.0",
    "playwright": "^1.58.2",
    "rimraf": "^6.1.2",
    "turbo": "^2.8.3",
    "typescript": "^5.9.3",
    "vite": "catalog:",
    "vitest": "^4.0.18"
  },
  "packageManager": "pnpm@10.29.2",
  "engines": {
    "node": ">=22",
    "pnpm": ">=10.26.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "vite": "^8.0.0-0"
      }
    },
    "overrides": {
      "esbuild": "^0.27.3"
    },
    "updateConfig": {
      "ignoreDependencies": [
        "@types/node"
      ]
    }
  }
}
