{
  "extends": "@raypx/config/react.json",
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts",
    ".source/**/*.ts"
  ],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "@/lib/*": ["./lib/*"],
      "fumadocs-mdx:collections/*": [".source/*"],
      "@raypx/ui/*": ["../../packages/ui/src/*"]
    }
  }
}
