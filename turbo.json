{
  "$schema": "https://turbo.build/schema.json",
  "envMode": "loose",
  "ui": "tui",
  "globalDependencies": ["**/.env.*local", ".env.example"],
  "globalEnv": [
    "DATABASE_URL",
    "REDIS_URL",
    "AUTH_SECRET",
    "AUTH_GOOGLE_ID",
    "AUTH_GOOGLE_SECRET",
    "AUTH_GITHUB_ID",
    "AUTH_GITHUB_SECRET",
    "AUTH_RESEND_KEY",
    "RESEND_FROM"
  ],
  "globalPassThroughEnv": [
    "NODE_ENV",
    "CI",
    "VERCEL",
    "VERCEL_ENV",
    "VERCEL_URL",
    "npm_lifecycle_event"
  ],
  "tasks": {
    "topo": {
      "dependsOn": ["^topo"]
    },
    "build": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env", "vite.config.*"],
      "outputs": ["dist/**", ".tanstack/**", ".cache/tsbuildinfo.json"]
    },
    "typecheck": {
      "cache": true,
      "dependsOn": ["^typecheck"]
    },
    "dev": {
      "cache": false,
      "dependsOn": ["^dev"],
      "inputs": ["$TURBO_DEFAULT$", ".env", "**/*.env.*"],
      "persistent": true
    },
    "format": {
      "cache": true,
      "outputs": [".cache/.biomecache"],
      "outputLogs": "new-only"
    },
    "check": {
      "cache": true,
      "dependsOn": ["^topo"],
      "outputs": [".cache/.biomecache"],
      "outputLogs": "new-only"
    },
    "generate": {
      "cache": true,
      "outputLogs": "new-only",
      "outputs": ["generated/**", "**/*.generated.*"]
    },
    "start": {
      "cache": false,
      "dependsOn": ["build"]
    },
    "test": {
      "cache": true,
      "dependsOn": [],
      "inputs": [
        "$TURBO_DEFAULT$",
        "vitest.config.*",
        "jest.config.*",
        "**/*.test.*",
        "**/*.spec.*"
      ],
      "outputs": ["coverage/**", "test-results/**"]
    },
    "clean": {
      "cache": false
    },
    "//#clean": {
      "cache": false
    },
    "shadcn": {
      "cache": false,
      "interactive": true
    }
  }
}
